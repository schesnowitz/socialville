<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

<div class="form-inputs">
  <div class="row">
    <div class="col-md-3">
      <%= f.input :username, required: true, autofocus: true, 
      label: false,  placeholder: "Enter Your Username" %>
    </div>
    <div class="col-md-3">
      <%= f.input :email, required: true, autofocus: false, label: false, 
      placeholder: "Enter Your Username" %>
    </div>
    <div class="col-md-2">

    </div>
    <div class="col-md-4">
        <%= f.input :image, as: :file %>  <%= image_tag @user.image.url(:thumb), 
                                        class: "img-circle text-center" %>
    </div>
</div>
<hr>

<div class="row">
    <div class="col-md-3">
      <%= f.input :alt_email, required: false, autofocus: false , 
      label: false,  placeholder: "Enter a public email" %>  
    </div>
    <div class="col-md-6">
      <div class="text-muted text-center">
      <%= f.input :age, start_year: 1930, end_year: 2008, 
      prompt: {year: "Year", day: "Day", month: "Month"},
       order: [:month, :day, :year], required: false, label: false %> 
      What's Your Birhday?
      </div>
    </div>
    <div class="col-md-2">
      <%= f.input :gender, collection: ["Male", "Female", "Other"], label: false,
      include_blank: "Gender", required: false %>
    </div>
</div>
<hr>

    <div class="row">
        <div class="col-md-4">
          <%= f.input :location, required: false, autofocus: false, label: false,  
          placeholder: "Enter your area" %>
        </div>
        <div class="col-md-4">
          
        </div>
        <div class="col-md-4"></div>
    </div>
 
  <%= f.input :bio, required: false, autofocus: false, label: false,  
      placeholder: "Biography Info" %> 
      <hr>
      
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
  <% end %>
  
    <div class="row">
      <div class-"panel panel-heading">
        <div class="col-md-4">
          <%= f.input :current_password, required: true, label: false,  
      placeholder: "Enter Password to save changes" %>
        </div>
        <div class="col-md-4">
            <%= f.input :password, autocomplete: "off", required: false, label: false,  
            placeholder: "Change your password" %>
        </div>
        <div class="col-md-4">
            <%= f.input :password_confirmation, required: false, label: false,  
            placeholder: "Confirm new password" %>
            </div>
        </div>
    </div>
</div>

  <div class="row">
    <div class="col-md-4">
      <div class="form-actions">
        <%= f.button :submit, "Update" %>
      </div>
      </div>
      <div class="col-md-4">
        <%= f.input :cover, as: :file %>
     </div>
      <div class="col-md-4">
        <%= image_tag @user.image.url(:preview), 
            class: "img-rounded text-center" %>
      </div>
</div>


<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>